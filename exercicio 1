package exercicio;
import java.util.Scanner;
public class exercicios {
	public static void main(String[]args) {
Scanner sc = new Scanner(System.in);

System.out.print("Digite um valor: ");
    int n1 = sc.nextInt();
    
    if(n1 % 2 == 0) {
    	System.out.println("É par");
    }else {
    	System.out.println("É impar");
    }

sc.close();
	}
}
